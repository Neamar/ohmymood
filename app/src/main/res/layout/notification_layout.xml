<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:weightSum="5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/smiley1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/smiley_1" />

    <ImageView
        android:id="@+id/smiley2"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/smiley_2" />

    <ImageView
        android:id="@+id/smiley3"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/smiley_3" />

    <ImageView
        android:id="@+id/smiley4"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/smiley_4" />

    <ImageView
        android:id="@+id/smiley5"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/smiley_5" />
</LinearLayout>